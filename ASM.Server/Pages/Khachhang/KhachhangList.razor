@page "/KhachhangList"
@using ASM.Share.Models
@using ASM.Server.Data
@inject ASM.Share.Models.IKhachhangSvc _khachhangService

<h1>Danh sách người dùng</h1>

@if (khachhangs == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Họ và tên</th>
                <th>Ngày sinh</th>
                <th>Số điện thoại</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in khachhangs)
            {
                <tr>
                    <td>@item.FullName</td>
                    <td>@item.Ngaysinh</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.EmailAddress</td>
                    @*<td>
                        <a class="btn btn-info" href="/KhachhangDialog/@item.KhachhangID">Sửa</a>
                        <a class="btn btn-warning" @onclick="@(() => Delete(item.KhachhangID))">Xoá</a>
                    </td>*@
                </tr>
            }
        </tbody>
    </table>
}

@code {
